<Window x:Class="konyvtarkezelo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:konyvtarkezelo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Név" FontFamily="Cooper Black" FontSize="36" Grid.Row="0" Grid.Column="0"/>
        <TextBox Grid.Column="0" Grid.Row="0" Margin="0,84,0,66" Height="67" />
        <TextBox Grid.Column="0" Grid.Row="0" InputMethod.InputScope="Number" Margin="0,150,0,0"/>


        <ComboBox Grid.Column="1" Grid.Row="0"/>

        <Label Content="Hírek!" FontFamily="Cooper Black" FontSize="36" Grid.Row="0" Grid.Column="2"/>
        <StackPanel x:Name="sp_feltet" Grid.Row="0" Grid.Column="2" Margin="0,50,0,0" >
            <CheckBox Content="Hírlevél" FontSize="20" FontFamily="Times New Roman"/>
            <CheckBox Content="SMS értesítés" FontSize="20" FontFamily="Times New Roman"/>
        </StackPanel>

        <Label Content="Hírek!" FontFamily="Cooper Black" FontSize="36" Grid.Row="1" Grid.Column="0"/>
        <StackPanel x:Name="sp_atvetel" Grid.Row="1" Grid.Column="0" Margin="0" >
            <RadioButton Content="Normál" FontFamily="Times New Roman" FontSize="20"/>
            <RadioButton Content="Diák" FontFamily="Times New Roman" FontSize="20"/>
            <RadioButton Content="Nyugdíjas" FontFamily="Times New Roman" FontSize="20"/>
        </StackPanel>

        <Button x:Name="btn_rendel" Content="Mentés" Grid.Column="1" Grid.Row="1" FontSize="36" FontFamily="Cooper Black" />

        <ListBox Grid.Column="2" Grid.Row="1"/>
    </Grid>
</Window>
